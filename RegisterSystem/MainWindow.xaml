<Window x:Class="RegisterSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="注册器"
        Height="560"
        Width="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFEFEFEF">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FF9A9A9A" BorderThickness="1" Padding="10" Background="WhiteSmoke">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="注册状态" FontSize="16"/>
                <TextBox x:Name="StatusTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" IsReadOnly="True" FontSize="16"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="当前日期"/>
                <TextBox x:Name="CurrentDateTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" IsReadOnly="True"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="机器码"/>
                <TextBox x:Name="MachineCodeTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" IsReadOnly="True"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Top" Text="注册码"/>
                <TextBox x:Name="EnrollCodeTextBox" Grid.Row="3" Grid.Column="1" Height="120" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                <Button Grid.Row="3" Grid.Column="2" Margin="8,0,0,0" Height="54" VerticalAlignment="Top" Content="授权\n注册" Background="#FFF6D40D" Click="ActivateButton_Click"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" Header="注册码生成（供应商使用）" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="当前日期"/>
                <DatePicker x:Name="CurrentDatePicker" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="使用日期"/>
                <DatePicker x:Name="DeadlineDatePicker" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>
                <Button Grid.Row="1" Grid.Column="2" Margin="10,0,0,8" Content="生成注册码" Background="#FFF6D40D" Click="GenerateButton_Click"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="生成结果"/>
                <TextBox x:Name="GeneratedCodeTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="110" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="注册文件"/>
                <TextBox x:Name="RegisterFilePathTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" IsReadOnly="True"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
