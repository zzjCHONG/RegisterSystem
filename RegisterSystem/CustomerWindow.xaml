<Window
    x:Class="RegisterSystem.CustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="客户注册界面"
    Width="650"
    Height="350"
    Background="#FFEFEFEF"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Border
            Padding="10"
            Background="WhiteSmoke"
            BorderBrush="#FF9A9A9A"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="注册状态" />
                <TextBox
                    x:Name="StatusTextBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,8"
                    FontSize="16"
                    IsReadOnly="True" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="剩余时间" />
                <TextBox
                    x:Name="RemainingTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,8"
                    IsReadOnly="True" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="当前日期" />
                <TextBox
                    x:Name="CurrentDateTextBox"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,8"
                    IsReadOnly="True" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="机器码" />
                <TextBox
                    x:Name="MachineCodeTextBox"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,8,8"
                    IsReadOnly="True" />
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="0,0,0,8"
                    Click="CopyMachineCodeButton_Click"
                    Content="复制机器码" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0,0,0,8"
                    Foreground="#FF4D4D4D"
                    Text="请将机器码发送给供应商，收到注册码后粘贴到下方并点击授权注册。"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    VerticalAlignment="Top"
                    Text="注册码" />
                <TextBox
                    x:Name="EnrollCodeTextBox"
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="140"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
                <Button
                    x:Name="ActivateButton"
                    Grid.Row="5"
                    Grid.Column="2"
                    Height="54"
                    Margin="8,0,0,0"
                    VerticalAlignment="Top"
                    Background="#FFF6D40D"
                    Click="ActivateButton_Click"
                    Content="授权&#x0a;注册" />
            </Grid>
        </Border>
    </Grid>
</Window>
