<Window
    x:Class="RegisterSystem.VendorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="供应商注册码生成界面"
    Width="680"
    Height="350"
    Background="#FFEFEFEF"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <GroupBox Padding="8" Header="注册码生成（供应商使用）">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="130" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="客户机器码" />
                <TextBox
                    x:Name="MachineCodeTextBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,8" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0,0,0,8"
                    Foreground="#FF4D4D4D"
                    Text="输入客户发来的机器码后，选择授权策略并生成注册码，再发送给客户。"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="当前日期" />
                <DatePicker
                    x:Name="CurrentDatePicker"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,8"
                    SelectedDateChanged="CurrentDatePicker_SelectedDateChanged" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="授权类型" />
                <ComboBox
                    x:Name="LicenseTypeComboBox"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,8"
                    SelectionChanged="LicenseTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="3天" />
                    <ComboBoxItem Content="10天" />
                    <ComboBoxItem Content="20天" />
                    <ComboBoxItem Content="一个月" />
                    <ComboBoxItem Content="三个月" />
                    <ComboBoxItem Content="一年" />
                    <ComboBoxItem Content="永久" />
                    <ComboBoxItem Content="自定义日期" />
                </ComboBox>

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="使用日期" />
                <DatePicker
                    x:Name="DeadlineDatePicker"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,0,0,8" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="10,0,0,8"
                    Background="#FFF6D40D"
                    Click="GenerateButton_Click"
                    Content="生成注册码" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    VerticalAlignment="Center"
                    Text="生成结果" />
                <TextBox
                    x:Name="GeneratedCodeTextBox"
                    Grid.Row="5"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Height="110"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <!--<TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="启动方式" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    IsReadOnly="True"
                    Text="在 App.xaml.cs 中将 StartVendorWindow 设为 true 可直接打开本界面" />-->
            </Grid>
        </GroupBox>
    </Grid>
</Window>
